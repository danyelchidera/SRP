@page
@model SRP.Pages.Categories.IndexModel
@{
}

<h1 text-primary>Categories</h1>
<a asp-page="/categories/createcategory" class="btn btn-outline-success mb-2"><i class="bi bi-pencil-square"></i> Create Category</a>

<table class="table table-bordered table-striped" style="width:100%">
		<thead>
			<tr>
				<th>
					Category Name
				</th>
				<th>
					Display Order
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach(var obj in Model.Categories)
			{
				<tr>
					<td width="50%">@obj.Name</td>
					<td width="30%">@obj.DisplayOrder</td>
					<td>
						<div class="w-75 btn-group" role="group">
						<a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
							<i class="fa fa-pencil" aria-hidden="true"></i>
						</a>
						<a asp-page="Delete" asp-route-id="@obj.Id"  class="btn btn-danger mx-2">
							<i class="fa fa-trash" aria-hidden="true"></i>
						</a>
						</div>
					</td>
				</tr>
			}
			
		</tbody>
	</table>

