@page
@model SRP.Pages.Categories.EditModel
@{
}
<form method="post">

    <h1 class="pl-3">Edit Category</h1>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="Category.Id"/>
    <div>
    <label asp-for="Category.Name"></label>
    <input asp-for="Category.Name" class="form-control"/>
    <span asp-validation-for="Category.Name" class="text-danger mb-2"></span>
    </div>

    <div>    <label asp-for="Category.DisplayOrder"class="mt-2"></label>
    
    <input asp-for="Category.DisplayOrder" class="form-control" />
    <span asp-validation-for="Category.DisplayOrder" class="text-danger mb-2"></span>
    </div>

    <button type="submit" class="btn btn-success mt-2">Edit Categroy</button>
</form>
@section scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}